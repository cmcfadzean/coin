<%= component "heading", title: @employee.name , stat: number_to_currency(@salary, :unit => "$") %>

<%= component "item", title: "", subtitle: "", link: "" do %>
  <%= link_to 'New Salary', new_employee_salary_path(params[:employee_id]) %>
<% end %>
<% @salaries.each do |salary| %>
  <%= component "item", title: number_to_currency(salary.salary, :unit => "$"), subtitle: salary.effective.strftime("%B %d, %Y"), link: edit_employee_salary_path(salary.employee, salary) %>
<% end %>
